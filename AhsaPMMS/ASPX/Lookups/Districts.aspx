                            </tr>
                            <tr>
                                <td>
                                    <b>الاسم الانجليزي</b>
                                </td>
                                <td>
                                    <asp:TextBox ID="ENNAMETextBox" runat="server" Text='<%# Bind("ENNAME") %>' />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>رقم الحي</b>
                                </td>
                                <td>
                                    <telerik:RadMaskedTextBox ID="RadMaskedTextBox1" runat="server" Mask="####" Text='<%# Bind("DIST_NO") %>'
