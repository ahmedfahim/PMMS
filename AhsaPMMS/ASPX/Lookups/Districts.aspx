                    DefaultMode="Edit" EnableModelValidation="True" Visible="False">
                    <EditItemTemplate>
                        <table class="style1">
                            <tr>
                                <td>
                                    <b>الاسم العربي</b>
                                </td>
                                <td>
                                    <asp:TextBox ID="ARNAMETextBox" runat="server" Text='<%# Bind("ARNAME") %>' />
