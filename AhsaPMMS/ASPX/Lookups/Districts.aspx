            <td colspan="3">
                <asp:GridView ID="GridView1" runat="server" AutoGenerateColumns="False" DataKeyNames="DIST_ID"
                    DataSourceID="odsDistricts" EnableModelValidation="True" CellPadding="4" ForeColor="#333333"
                    GridLines="None" OnSelectedIndexChanged="GridView1_SelectedIndexChanged">
